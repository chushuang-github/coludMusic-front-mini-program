/* pages/search/search.wxss */
.searchContainer{
  padding: 0rpx 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0rpx;
}
.searchInput{
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.clear{
  position: absolute;
  right: 30rpx;
  top: 0rpx;
  font-size: 30rpx;
  z-index: 10;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.placeholder{
  font-size: 28rpx;
}
.cancel{
  width: 100rpx;
  text-align: center;
}
.searchIcon{
  position: absolute;
  left: 15rpx;
}


/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.order{
  margin: 0rpx 10rpx;
}
.hotItem .iconImage{
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/* 搜索内容展示 */
.searchContent{
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content{
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
  font-size: 26rpx;
}

/* 搜索历史版块 */
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
}
.history .title{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.history .historyItem{
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ededed;
  font-size: 26rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.history .delete{
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 36rpx;
}