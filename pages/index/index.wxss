/* pages/index/index.wxss */
/* 轮播图区域 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem text{
  font-size: 26rpx;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240,19,19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0rpx;
}

/* 推荐歌曲区域 */
/* 推荐歌曲头部 */
.recommendContainer{
  padding: 20rpx;
}
/* 推荐歌曲内容区 */
.recommendScroll{
  display: flex;
  height: 275rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 多行文本溢出隐藏，省略号代替，看下面几行代码 */
  overflow: hidden;
  text-overflow: ellipsis;
  /* webkit的盒模型，基于webkit内核有一些属性 */
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient: vertical;
  /* 设置行数 */
  -webkit-line-clamp: 2;
}

/* 歌曲排行版区域 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 420rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
