/* pages/video/video.wxss */
/* 头部 */
.viewContainer .header{
  display: flex;
  padding: 10rpx;
}
.viewContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.viewContainer .header .search{
  border: 1rpx solid #eeeeee;
  /* 设置flex:1，会导致父元素宽度自动为100% */
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #de3c33;
}

/* 导航区域 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navItem .active{
  border-bottom: 4rpx solid red;
}

/* 视频列表 */
.videoScroll{
  margin-top: 10rpx;
  /* calc:可以动态计算元素的宽高，运算符左右两侧必须要加空格，否则计算失效 */
  /* 1vh=1%的视口高度   1vw=1%的视口宽度 */
  height: calc(100vh - 173rpx);
}
.videoItem{
  padding: 0 3%;
}
